/* pages/bindingPhone/bindingPhone.wxss */

.telphone {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #666;
  height: 76rpx;
  line-height: 76rpx;
}

.bind-phone_header {
  margin: 30rpx 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  line-height: 90rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.bind-phone_header > text:last-child {
  color: #888;
}

.bind-phone_input {
  background-color: #fff;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.verification_code {
  position: relative;
}

.header_input input {
  height: 90rpx;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.header-input_border {
  border-bottom: 1px solid #f0eff5;
}

.verification_code input {
  padding-right: 270rpx;
  box-sizing: border-box;
}

.v-code {
  display: block;
  width: 240rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #04be02;
  position: absolute;
  right: 0;
  top: 15rpx;
  color: #fff;
  border-radius: 14rpx;
}

.get-v_code {
  background-color: #808080;
}

.btn-recharge {
  margin: 90rpx 30rpx 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 30rpx;
  background-color: #e41436;
  color: #fff;
  margin-top: 50rpx;
}
