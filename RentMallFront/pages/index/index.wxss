/* 模块分区 */
.list{
width: 100%;
height: 380rpx;
color: #ffffff;
}
 .resoutuijian{
   margin-top: 10rpx;
  background-color: #FAB9B7;
}
 .jingpinhaoshu{
  background-color: #E8B9FD;
}
.xinshuremai{
  background-color: #FFC595;
}
.jikemiaosha{
  background-color: #F7EEC3;
}
.ershoujiushu{
  background-color: #BBE7C4;
}
.ershouzahuo{
  background-color: #BBD2F4;
}
.list .content_text{
width: 100%;
margin-bottom: 5rpx;
}
.list .title{
  margin-left: 20rpx;
}
.list .turntodetail{
float: right;
margin-right: 20rpx;
}

.list .content_list{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.list .content_list .example{
  width: 250rpx;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  
}
.list .content_list .example .example_list{
  width: 200rpx;
  display: flex;
  flex-direction: column;
  border: 1px solid #d0d0d0;
  background-color: #ffffff;
  border-radius: 30rpx;
  box-shadow: 3px 1px 1px #A8A8A8;
}
.top_pic{
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 160rpx;
}
.list .content_list .example_pic{
  width: 170rpx;
	height: 140rpx;
  padding: 15rpx;
}
.example_list .introduce{
  height: 140rpx;
  color: black;
  font-size: 30rpx;
  margin-top: 40rpx;
  text-align: center;
}

.example_list .introduce text{
  height: 50rpx;
text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}
.introduce .sku-price{
  color: red;
  position: relative;
  font-size: 35rpx;
}



